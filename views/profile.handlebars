<div class="row">
  <div class="col-sm">
    <div class="card" style="width: 18rem;">
      <a href="/uploadImage">
      <img src="{{user.image}}" class="card-img-top" alt="...">
      </a>
        <div class="card-body">
        </div>
    </div>
  </div>

        <div class="col-sm" id="profile-info"> 
            <h5 class="card-title">Name: {{user.fullname}}</h5>
            <p class="card-text">Email: {{user.email}}</p>
            <p class="card-text"><i class="fa fa-mars"></i> {{user.gender}}</p>
            <p class="card-text"><i class="fa fa-book"></i> {{user.about}}</p>
            <hr>
            <h4 >
              <i onclick="editProfile()" class="fa fa-edit">Edit Profile</i>
              <a href="/askToDelete"> <i class="fa fa-trash">Delete Profile</i></a>
            
            </h4>
        </div>

        <div class="col-sm" id="profileEditor" style="display:none">
          <form action="/updateProfile" method="POST">
          <div class="form-group">
            <input type="text" name="fullname" id="fullname" value="{{user.fullname}}" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="email" id="email" value="{{user.email}}" class="form-control">
          </div>
          <div class="form-group">
            <select name="gender" id="gender" class="form-control">
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="Cis-Man">Cis Man</option>
              <option value="Trans-Man">Trans Man</option>
              <option value="Cis-Woman">Cis Woman</option>
              <option value="Trans-Woman">Trans Woman</option>
              <option value="Non-Binary">Non-binary</option>
              <option value="Non-conforming">Non-Conforming</option>
              <option value="Queer">Queer</option>
              <option value="Crossdresser">Crossdresser</option>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="about" id="about" value="{{user.about}}" class="form-control">
          </div>
          <button type="submit" class="btn btn-danger">Save</button>
          </form>
        </div>
</div>
<script>
  function editProfile(){
    document.getElementById('profile-info').style.display = 'none';
    document.getElementById('profileEditor').style.display = 'block';
  }
</script>