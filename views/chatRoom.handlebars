<div class="container">

    <h3 class="center">
        <a href="/userProfile/{{chat.sender._id}}">
        <img src="{{chat.sender.image}}" class="chatroom-users rounded-circle">
        </a>
        
        <a href="/userProfile/{{chat.sender._id}}"> 
        <img src="{{chat.reciever.image}}" class="chatroom-users rounded-circle">
        </a>
    </h3>

    <div id="messages">
        {{#each chat}}
        {{#each chats}}
        {{#if senderMessage}}
        <div class="media">
            <a href="/userProfile/{{senderName._id}}"><img src="{{senderName.image}}" class="mr-3 chatroom-users rounded-circle">
            </a>
            <div class="media-body">
                <h5 class="mt-0">{{senderMessage}}</h5>
                    <small>{{getLastMoment date 'hour'}}</small>
            </div>
        </div>
        <hr>
        {{/if}}
        {{/each}}
        {{/each}}

        {{#each chat}}
        {{#each chats}}
        {{#if recieverMessage}}
        <div class="media">
            <a href="/userProfile/{{recieverName._id}}"> <img src="{{recieverName.image}}" class="mr-3 chatroom-users rounded-circle" alt="...">
            <div class="media-body"></a>
                <h5 class="mt-0">{{recieverMessage}}</h5>
                    <small>{{getLastMoment date 'hour'}}</small>
            </div>
        </div>
        <hr>
    {{/if}}
    {{/each}}
    {{/each}}

    </div>
    
    <form action="/chat/{{chat._id}}" method="POST">
        <input type="text" class="form-control" name="chat" placeholder="Type Message.." >
        <br>
        <button class="btn btn-primary" type="submit">Send</button>
    </form>

</div>